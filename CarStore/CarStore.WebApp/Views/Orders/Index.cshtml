@model CarStore.Library.Model.Location
@{
    ViewData["Title"] = "Locations";
}

<div class="text-center">

    <h1>Select a Location</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Products" method="get">
                <div class="form-group">
                    <select asp-for="LocationId" asp-items="@(new SelectList(@ViewBag.locations,"LocationId","LocationName"))"></select>
                    <input type="submit" class="btn btn-primary" />
                </div>
            </form>

        </div>

    </div>
</div>